<h1> All Admin Cards </h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>username</th>
      <th>email</th>
      <th>created at</th>
      <th>updated at</th>
      <th>role</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%=user.username%></td>
        <td><%=user.email%></td>
        <td><%=user.created_at%></td>
        <td><%=user.updated_at%></td>
        <td><%=user.role%></td>
        <td><%=link_to 'Change role', edit_admin_user_path(user)%></td>
        <td><%=link_to 'Delete', admin_user_path(user), method: :delete, data:
        { confirm: 'Are you sure you want to delete this user?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
